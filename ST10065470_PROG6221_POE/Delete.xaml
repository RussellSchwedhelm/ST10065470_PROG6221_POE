<Window x:Class="ST10065470_PROG6221_POE.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10065470_PROG6221_POE"
        mc:Ignorable="d"
        Title="Delete" Height="450" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="lb_recipes" DisplayMemberPath="Name" Margin="10,10,10,99"/>
        <Button x:Name="btn_delete" Content="Delete" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Width="62" FontSize="18" Click="btn_delete_Click"/>
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="166,399,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_confirm" Content="Confirm" HorizontalAlignment="Left" Margin="245,399,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_error" Content="Error! Please Select A Recipe To Delete It!" HorizontalAlignment="Center" Margin="0,335,0,0" VerticalAlignment="Top" Foreground="Red" Visibility="Hidden"/>
    </Grid>
</Window>
